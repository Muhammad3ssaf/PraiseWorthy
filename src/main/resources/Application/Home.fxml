<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="Application.HomeController">
    <children>
        <Label fx:id="welcomeLabel" />
        <Label text="Enter your name:" />
        <TextField fx:id="nameTextField" />
        <Button fx:id="updateNameButton" text="Update Name" onAction="#handleUpdateName" />
        <Button text="Logout" onAction="#handleLogout" />
        <Button fx:id="continueButton" text="Continue" onAction="#handleContinue" />
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>
