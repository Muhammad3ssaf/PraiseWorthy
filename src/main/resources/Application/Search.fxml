<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml">
    <children>
        <TextField fx:id="searchField" promptText="Enter student's last name" />
        <Button text="Search" onAction="#handleSearch" />
        <TextArea fx:id="resultTextArea" editable="false" wrapText="true" prefWidth="400" prefHeight="50" />
        <Button text="Back" onAction="#handleBack" />
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>
